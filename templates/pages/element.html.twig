{% extends 'base.html.twig' %}


{% block title %}{{ element.caption|e }} {% endblock %}


{% block meta_desctiption %}"{{ element.caption|e }}"
{% endblock %}


 {% block body %}
     <div class="container block-content">
         <div class="row">
             <div class="col-xs-12 col-sm-6 col-md-3 text-center mainimage" style="margin-top:10px;">
                 {{ include('pages/element-image.html.twig',{'element': element}) }}
             </div>
             <div class="col-xs-12 col-sm-6 col-md-9">
                 <h1>{{ element.caption|e }}{% if app.environment=='dev' %} [{{ element.id|e }}]{% endif %}</h1>
                 <p><b>Базовое описание:</b> {{ element.short|e }}</p>
                 {% if element.addition %}<p><b>Дополнение:</b> {{ element.addition.caption|e }}</p>{% endif %}
                 {% if element.description %}<p><b>Дополнительные комментарии: </b> {{ element.description|nl2br }}</p>{% endif %}
                 {% if app.user %}
                     <p>
                         <a class="btn btn-info" data-id="{{ element.id|e }}" data-description="{{ element.description }}" data-toggle="modal" data-target="#editElementModal">
                             <span class="glyphicon glyphicon-pencil"></span> Редактировать
                         </a>
                     </p>
                 {% endif %}
             </div>
         </div>
         <hr/>
         {% set elem_ids=[]%}
         <div class="row allrules">
             {% for row in content_arr %}
                 {% if row.rules|length>0 %}
                     <div class="col-xs-12">
                         <div class="row">
                             <div class="col-xs-12"><h2>{{ row.type.caption|e }}</h2></div>
                         </div>
                         {% for rule in row.rules %}
                         <div class="row oneelement">
                             <div class="col-xs-2">
                                 {{ include('pages/element-image.html.twig',{'element': rule.main}) }}
                             </div>
                             <div class="col-xs-10">
                                 <a href="{{ url('oneelement', {'typealias':rule.main.type.alias|e, 'elementalias': rule.main.alias|e}) }}"><h3 class="elementheader" >{{ rule.main.caption|e }}</h3></a>
                                 <p>{{ rule.rule.caption|e }}
                                     {% if app.user %}
                                     <a data-id="{{ rule.rule.id|e }}" data-caption="{{ rule.rule.caption|e }}" data-toggle="modal" data-target="#editruleModal" class="starteditrule">Редактировать</a>
                                     {% endif %}
                                     {% set elem_ids=elem_ids|merge([rule.main.id]) %}
                                 </p>
                                 {% if rule.also|length>0 %}
                                     <p><b>См. также:</b>
                                     {% for elem in rule.also %}
                                         {% if loop.index>1 %}, {% endif %}
                                         <a href="{{ url('oneelement', {'typealias':elem.type.alias|e, 'elementalias': elem.alias|e}) }}">{{ elem.caption|e }}</a>

                                     {% endfor %}
                                     </p>
                                 {% endif %}
                             </div>
                         </div>
                         {% endfor %}
                     </div>
                 {% endif %}
             {% endfor%}
         </div>


         {% if app.user %}
         <hr/>
         <div class="row">
             <div class="col-xs-12">
                 <h3>Добавить новое правило для "{{ element.caption|e }}"</h3>
                 <form action="{{ url('addrule') }}" id="newruleform" style="max-width:600px;">
                     <div class="form-group">
                         <label for="description" class="form-control-label">Текст правила:</label>
                         <textarea class="form-control" aria-required="true" required id="description" name="description"></textarea>
                     </div>
                     <div class="form-group">
                         <label for="element_id2" class="form-control-label">Также привязать элемент:</label>
                         <div class="row">
                             <div class="col-xs-12" id="elements2"></div>
                             <div class="col-xs-12 col-md-12">
                                 <select class="form-control selectpicker" title="--Выбор из списка--"  id="element_id2" data-live-search="true" name="element_id2">
                                     {% for elem in alsoelements  %}
                                         {% if elem.id != element.id and elem.id not in elem_ids %}
                                             <option data-tokens="{{ elem.caption|lower }}" value="{{ elem.id|e }}">{{ elem.caption|e }} ({{ elem.typeelement.caption|e }})</option>
                                         {% endif %}
                                     {% endfor %}
                                 </select>
                             </div>
                         </div>
                     </div>
                     <input type="hidden" name="element_id1" value="{{ element.id|e }}">
                     <button type="submit" class="btn btn-success">Добавить правило</button>
                 </form>
             </div>
         </div>
         {% endif %}
         <hr/>
         <div class="row">
             <div class="col-xs-12">
                 <a class="btn btn-default" href="{{ url('homepage') }}">На главную</a>
             </div>
         </div>
     </div>

     <div class="modal fade" id="editruleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
         <div class="modal-dialog" role="document">
             <div class="modal-content">
                 <div class="modal-header">
                     <h5 class="modal-title" id="exampleModalLabel">Редактирование правила</h5>
                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                         <span aria-hidden="true">&times;</span>
                     </button>
                 </div>
                 <form id="editruleForm" action="{{ url('editrule') }}">
                     <div class="modal-body">
                             <div class="form-group">
                                 <label for="message-text" class="col-form-label">Новый текст правила:</label>
                                 <textarea class="form-control" id="description" name="description" style="min-height:80px;"></textarea>
                             </div>
                         </div>
                         <input type="hidden" name="element_id" value="{{ element.id|e }}">
                         <input type="hidden" name="rule_id" id="rule_id" >
                     <div class="modal-footer">
                         <button type="submit" class="btn btn-success">Сохранить изменения</button>
                         <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                     </div>
                 </form>
             </div>
         </div>
     </div>

     <div class="modal fade" id="editElementModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
         <div class="modal-dialog" role="document">
             <div class="modal-content">
                 <div class="modal-header">
                     <h5 class="modal-title" id="exampleModalLabel">Редактирование описания</h5>
                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                         <span aria-hidden="true">&times;</span>
                     </button>
                 </div>
                 <form id="editruleForm" action="{{ url('editelement') }}">
                     <div class="modal-body">
                         <div class="form-group">
                             <label for="message-text" class="col-form-label">Дополнительные комментарии:</label>
                             <textarea class="form-control" id="description" name="description" style="min-height:80px;"></textarea>
                         </div>
                     </div>
                     <input type="hidden" name="element_id" value="{{ element.id|e }}">
                     <div class="modal-footer">
                         <button type="submit" class="btn btn-success">Сохранить изменения</button>
                         <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                     </div>
                 </form>
             </div>
         </div>
     </div>

     <script>
         $(function() {
             $('.selectpicker').selectpicker();
             $("select").on("changed.bs.select",
                 function(e, clickedIndex, newValue, oldValue) {
                     var $selected=$('select[id=element_id2] option').filter(':selected')
                     var $elements2=$('#elements2')
                     $elements2.append('<p title="Кликните для удаления" class="element_2" data-id="'+$selected.val()+'">'+$selected.text()+'</p>');
                     $elements2.append('<input name="elements2[]" type="hidden" value="'+$selected.val()+'">');

                     $('.element_2').on('click',function(e) {
                         $('input[value="'+$(this).data('id')+'"]').remove();
                         $(this).remove();
                     });

                     $('.selectpicker').val('default');
                     $('.selectpicker').selectpicker("refresh");


                     //console.log(this.value, clickedIndex, newValue, oldValue)
                 });
         });
         $('#editruleModal').on('show.bs.modal', function (e) {
             var button = $(e.relatedTarget)
             var modal = $(this)
             modal.find('#description').val(button.data('caption'));
             modal.find('#rule_id').val(button.data('id'));
         })
         $('#editElementModal').on('show.bs.modal', function (e) {
             var button = $(e.relatedTarget)
             var modal = $(this)
             modal.find('#description').val(button.data('description'));
         })
     </script>

     <style>
         .element_2 {
             padding:5px;
             text-decoration:underline dotted blue;
             margin:0;
         }
         .element_2:hover {
             background-color: #dba3a3;
             cursor: pointer;
         }
         .element_2:after {
            content:' X';
             color:red;
         }

         .elementheader {
             margin-top:0;
         }

         .oneelement {
             padding-bottom:10px;
             padding-top:10px;
             border-bottom: 1px solid black;
         }
     </style>




 {% endblock %}