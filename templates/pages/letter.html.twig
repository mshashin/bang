{% extends 'base.html.twig' %}


{% block title %}Толкование сновидений на букву "{{ letter.caption|upper }}"{% endblock %}

 {% block body %}
     <div class="container">
         <div class="row">
             <div class="col-xs-12">
                 <div class="panel panel-default">
                     <div class="panel-heading">
                         <h1>Сны на букву "{{ letter.caption|upper }}"</h1>
                     </div>
                     <div class="panel-body">
                         {% for word in words %}
                             <div class="{# col-lg-2 col-md-3 col-sm-4 #} col-xs-12">
                                 <a href="{{ url('oneword', {'alias':word.alias|e}) }}" title="Посомтреть толкования сна {{ word.caption|e }}">{{ word.caption|e }} </a> {% if app.environment=='dev' %}[{{ word.id|e }}]{% endif%} - {{ word.viewinterpretations|length|interscase }}
                             </div>
                         {% endfor %}
                     </div>
                 </div>
             </div>
         </div>
         <div class="row">
             <div class="col-xs-12">
                 <a class="btn btn-default" href="{{ url('homepage') }}">На главную</a>
             </div>
         </div>
     </div>


 {% endblock %}